

<div class="user-form animated fadeInDown">
  <div class="form-content">
      <h2>Sign in</h2>
      <div class="notice-style">
        <%= notice %>
        <%= alert %>
      </div>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

        <%= f.email_field :email, :autofocus => true, class: "inp-btn", placeholder: "email" %>
        <br>
        
        <%= f.password_field :password, class: "inp-btn", placeholder: "password"%>
        <br>
        <% if devise_mapping.rememberable? -%>
          <div class="remember-check-box"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div><%= f.submit "Sign in", class: "form-button"%></div>
      <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

