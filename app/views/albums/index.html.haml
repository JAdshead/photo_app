%h3 Albums Page

= link_to "Create new album", new_album_path

- @albums.each do |album|
  %ul
    %li
      %h4= album.title
    %li
      = album.description
    %li
      = album.user_id
      - if album.photos.first != nil
        = link_to image_tag(album.photos.first.image, :width => "100px"), album_path(album)
      
    - if can? :edit, album
      = link_to "Edit Album", edit_album_path(album)
